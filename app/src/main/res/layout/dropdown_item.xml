<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="@android:color/white"
                                             android:clickable="true" android:id="@+id/ConstraintLayout">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dropdown_item_background"
            android:id="@+id/dropdownLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="2dp">

        <TextView
                android:text="Milk 1 Expires"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dropdownTextview" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.0"
                android:textColor="@android:color/black" android:textSize="16sp" android:fontFamily="serif"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/carbsText"
                app:layout_constraintTop_toTopOf="@+id/proteinText"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="200dp"
                android:textAlignment="textStart" android:textColor="@android:color/black" android:textSize="16sp"
                android:fontFamily="serif" android:visibility="gone"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fatsText" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="200dp" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/carbsText" android:textAlignment="textStart"
                android:textColor="@android:color/black" android:textSize="16sp" android:fontFamily="serif"
                android:visibility="gone" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/proteinText"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/caloriesText" android:textAlignment="textStart"
                android:textColor="@android:color/black" android:textSize="16sp" android:fontFamily="serif"
                android:visibility="gone" android:layout_marginTop="24dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sugarsText" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/proteinText" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" android:textAlignment="textStart"
                android:textColor="@android:color/black" android:textSize="16sp" android:fontFamily="serif"
                android:visibility="gone" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/caloriesText"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" android:textAlignment="textStart"
                android:textColor="@android:color/black" android:textSize="16sp" android:fontFamily="serif"
                android:visibility="gone"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/dropdownTextview"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>